<div class="inputLink">
<h3>Вставьте ссылку</h3>
    {{#if isAuth}}
    <form action="/addLink" method="POST">
        <div class="input-field">
            <input id="title" name="link" type="text" class="validate" required>
            <label for="title">Paste link</label>
            <span class="helper-text" data-error="Вставьте ссылку"></span>
        </div>
        <button class="btn btn-primary">Добавить ссылку</button>
    {{else}}
        <h4>Добро пожаловать на сайт, пожалуйста зарегистрируйтесь</h4>
    {{#if isLogin}}
        <li class="active"><a href="'/auth/login#login">Войти</a></li>
    {{else}}
        <li><a href="/auth/login#login">Войти</a></li>
    {{/if}}
{{/if}}

    <input type="hidden" name="_csrf" value="{{csrf}}">

    </form>
</div>


